/* 地理位置修改模块begin */
.modify-location{
    padding: 67rpx;
    box-sizing: border-box;
    width: 80%;
    height: 450rpx;
    position: fixed;
    left: -600rpx;
    top: 30rpx;
    z-index: 100;
    background: #fff;
    box-shadow: 0 1px 10px #aaa;
    transition: 1s;
}
.locationChange{
    left: 0;
}
.modify-location>icon{
    position: absolute;
    right: 15rpx;
    top: 15rpx;
}
.current{
    line-height: 100rpx;
    font-size: 40rpx;
}
.picker{
    line-height: 100rpx;
    font-size: 40rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
.picker>image{
    width: 30rpx;
    height: 30rpx;
}
/* 地理位置修改模块end */
/* 天气信息begin */
.location{
    font-weight: bold;
    font-size: 40rpx;
    padding: 20rpx;
    border-radius: 20rpx;
    background: rgba(147, 209, 172, 0.3); 
    /* border:2px solid #000; */
    box-shadow: 0 0 24rpx 0 rgba(0, 0, 0, 0.06), 0 1rpx 0 0 rgba(0, 0, 0, 0.02); 
}
.city{
    font-size: 60rpx;
}
.chose{
    width: 40rpx;
