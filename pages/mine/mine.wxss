/* pages/mine/mine.wxss */
page{
    background: rgba(147, 209, 172, 0.3);
}
.info{
    display: flex;
    align-items: center;
    margin-bottom: 50rpx;
}
.info image{
    width: 175rpx;
    height: 175rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}
.title{
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}
.list{
    display: flex;
    flex-direction: column;
    background: #fff;
    padding: 0 50rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    border:3px dotted gray;
}
.list>text{
    line-height: 150rpx;
    border-bottom: 1px solid gray;
}
button{
    background:#76B78F;
    margin-top: 100rpx;
    border-radius: 80rpx;
    font-size: 40rpx;
}
.result{
    width: 100%;
    height: 1030rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background: #fff;
    box-shadow: 0 1px 10px #aaa;
    position: fixed;
    z-index: 100;
    bottom: -1014rpx;
    transition: 1s;
    border-radius: 20rpx;
    border: 3px dotted gray;
}
.result-show{
    bottom: 0rpx;
}
.result icon{
    position: absolute;
    top: 15rpx;
    right: 15rpx;
}
.score .wrap{
    padding: 30rpx;
}
.score input{
    /* border: 1px solid #333; */
}
.score .item{
    display: flex;
    line-height: 120rpx;
    border-bottom: 1px solid gray;
    align-items: center;
}