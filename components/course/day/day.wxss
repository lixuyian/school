/* components/course/day/day.wxss */
.warpper{
    display: grid;
    grid-template-rows: repeat(12,60px);
    text-align: center;
    font-size: 35rpx;
}
.warpper>view{
    text-align: center;
    vertical-align: center;
}
.day{
    background: rgba(147, 209, 172, 0.3);
    display: grid;
    align-items:center;
    justify-items: center;
    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}
.course{
    display: grid;
    grid-template-rows: repeat(11,60px);
}
my-course{
    display: grid;
    align-items:center;
    justify-items: center;
}
