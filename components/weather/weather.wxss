/* components/weather/weather.wxss */
.wrapper{
    /* background: rgba(147, 209, 172, 0.3);  */
    padding:10rpx 30rpx;
    margin-bottom: 20rpx;
    border-bottom: 1px solid rgb(214, 214, 214);
}
.wrap{
    display: grid;
    grid-template-columns: repeat(4,1fr);
    justify-items: center;
    align-items: center;
    justify-content: end;

}
image{
    width: 60rpx;
    height: 60rpx;
}
text{
    font-size: 35rpx;
}
scroll-view{
    height: 220rpx;
    display: flex;
    flex-direction: column;
    color: gray;
    background: #fff;
    font-size: 35rpx;
    padding: 20rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
    box-shadow:0 0 24rpx 0 rgba(0, 0, 0, 0.06), 0 1rpx 0 0 rgba(0, 0, 0, 0.02);
    border-radius: 20rpx;
}
